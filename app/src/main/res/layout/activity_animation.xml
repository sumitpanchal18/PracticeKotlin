<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AnimationActivity">

    <TextView
        android:id="@+id/animatedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Animate Me!"
        android:textSize="24sp"
        android:textColor="#FF6200EE" />

    <Button
        android:id="@+id/propertyAnimateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/animatedTextView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="ViewPropertyAnimator" />

    <Button
        android:id="@+id/circularRevealButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/propertyAnimateButton"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Circular Reveal" />

    <Button
        android:id="@+id/valueAnimatorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circularRevealButton"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="ValueAnimator" />

    <Button
        android:id="@+id/springAnimatorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueAnimatorButton"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="SpringAnimation" />
</RelativeLayout>
