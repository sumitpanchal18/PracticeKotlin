<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.sp.SecondActivity">

    <TextView
        android:id="@+id/cltxtSecName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_activity"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clbtnFinishAc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/finish_activity"
        app:layout_constraintEnd_toEndOf="@+id/cltxtSecName"
        app:layout_constraintStart_toStartOf="@+id/cltxtSecName"
        app:layout_constraintTop_toBottomOf="@+id/clfcvFrag" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clbtnReplaceFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/replace_fragment"
        app:layout_constraintEnd_toEndOf="@+id/cltxtSecName"
        app:layout_constraintStart_toStartOf="@+id/cltxtSecName"
        app:layout_constraintTop_toBottomOf="@+id/clbtnFinishAc" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clredirectToDial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/dial_pad"
        app:layout_constraintEnd_toEndOf="@+id/cltxtSecName"
        app:layout_constraintStart_toStartOf="@+id/cltxtSecName"
        app:layout_constraintTop_toBottomOf="@+id/clbtnReplaceFragment" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/clfcvFrag"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>