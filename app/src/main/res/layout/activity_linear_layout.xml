<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.layout.LinearLayoutActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtDial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:text="@string/dial"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtMobileNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingVertical="7dp"
        android:hint="@string/enter_number"
        android:gravity="center"
        android:maxLength="10"
        android:textStyle="bold"
        android:textSize="25sp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDial"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMobileNumber">

        <LinearLayout
            android:id="@+id/llHorizontal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt1"
                style="@style/DialpadButtonBackground"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt2"
                style="@style/DialpadButtonBackground"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt3"
                style="@style/DialpadButtonBackground"
                android:layout_weight="1"
                android:text="3" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llHorizontal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt4"
                style="@style/DialpadButtonBackground"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt5"
                style="@style/DialpadButtonBackground"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt6"
                style="@style/DialpadButtonBackground"
                android:layout_weight="1"
                android:text="6" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHorizontal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt7"
                style="@style/DialpadButtonBackground"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt8"
                style="@style/DialpadButtonBackground"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt9"
                style="@style/DialpadButtonBackground"
                android:layout_weight="1"
                android:text="9" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHorizontal4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/DialpadButtonBackground"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:visibility="invisible"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt0"
                style="@style/DialpadButtonBackground"
                android:layout_marginEnd="32dp"
                android:layout_weight="1"
                android:text="0" />

            <ImageView
                android:id="@+id/imgDel"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:src="@drawable/img_1" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>